{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChatRequest",
  "type": "object",
  "properties": {
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string",
            "enum": ["system", "user", "assistant", "tool"]
          },
          "content": {
            "type": "string",
            "description": "The text content of the message."
          }
        },
        "required": ["role", "content"]
      }
    },
    "stream": {
      "type": "boolean",
      "default": true,
      "description": "Must be true to enable Server-Sent Events (SSE)."
    }
  },
  "required": ["messages"]
}